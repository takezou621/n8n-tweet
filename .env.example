# n8n-tweet Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# n8n Configuration
# =============================================================================

# n8n Basic Authentication
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme123

# n8n Encryption Key (IMPORTANT: Change this for production)
N8N_ENCRYPTION_KEY=your-secure-encryption-key-here

# n8n Webhook URL (change for production deployment)
WEBHOOK_URL=http://localhost:5678/

# Timezone
GENERIC_TIMEZONE=Asia/Tokyo

# Log level (error, warn, info, verbose, debug, silly)
N8N_LOG_LEVEL=info

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================

POSTGRES_DB=n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=secure_postgres_password
POSTGRES_NON_ROOT_USER=n8n
POSTGRES_NON_ROOT_PASSWORD=secure_postgres_password

# =============================================================================
# Redis Configuration
# =============================================================================

# Redis Password (leave empty for no password)
REDIS_PASSWORD=

# Redis Memory Limit
REDIS_MAXMEMORY=256mb

# =============================================================================
# Application Configuration
# =============================================================================

# Environment
NODE_ENV=development

# Application Port
PORT=3000

# Log Level
LOG_LEVEL=info

# =============================================================================
# Twitter API Configuration
# =============================================================================

# Twitter API v2 Credentials
# Get these from https://developer.twitter.com/
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# =============================================================================
# RSS Feed Configuration
# =============================================================================

# RSS feed processing interval (in minutes)
RSS_FETCH_INTERVAL=30

# Content filtering threshold (0.0 - 1.0)
AI_RELEVANCE_THRESHOLD=0.7

# Maximum articles to process per run
MAX_ARTICLES_PER_RUN=10

# =============================================================================
# Security Configuration
# =============================================================================

# JWT Secret for API authentication
JWT_SECRET=your-jwt-secret-key-here

# API Rate Limiting
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# Monitoring Configuration
# =============================================================================

# Health check endpoint
HEALTH_CHECK_ENABLED=true

# Metrics collection
METRICS_ENABLED=true

# Alert webhook URL (for notifications)
ALERT_WEBHOOK_URL=

# =============================================================================
# Development Configuration
# =============================================================================

# Development mode settings
DEBUG=n8n-tweet:*
DEVELOPMENT_MODE=true

# Test database (for running tests)
TEST_POSTGRES_DB=n8n_test
TEST_REDIS_DB=1

# =============================================================================
# Production Configuration
# =============================================================================

# Production-specific settings (uncomment for production)
# NODE_ENV=production
# N8N_LOG_LEVEL=warn
# LOG_LEVEL=warn
# DEBUG=
# DEVELOPMENT_MODE=false

# SSL/TLS Configuration (for production)
# SSL_ENABLED=true
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# External URLs (for production deployment)
# WEBHOOK_URL=https://your-domain.com/
# N8N_HOST=your-domain.com
# N8N_PORT=443
# N8N_PROTOCOL=https

# =============================================================================
# Backup Configuration
# =============================================================================

# Backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=
BACKUP_S3_REGION=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=