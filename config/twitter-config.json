{
  "api": {
    "version": "v2",
    "baseUrl": "https://api.twitter.com/2",
    "timeout": 30000,
    "retryCount": 3,
    "retryDelay": 1000
  },
  "rateLimit": {
    "tweetsPerHour": 50,
    "tweetsPerDay": 1000,
    "requestsPerMinute": 100,
    "cooldownPeriod": 15
  },
  "validation": {
    "maxTweetLength": 280,
    "allowedMediaTypes": ["image/jpeg", "image/png", "image/gif"],
    "maxMediaFiles": 4
  },
  "retry": {
    "maxAttempts": 3,
    "backoffMultiplier": 2,
    "baseDelay": 1000,
    "maxDelay": 10000
  },
  "monitoring": {
    "trackApiUsage": true,
    "logFailures": true,
    "enableMetrics": true
  }
}