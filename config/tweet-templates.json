  "hashtags": {
    "ai": ["#AI", "#ArtificialIntelligence", "#MachineLearning", "#DeepLearning", "#ML", "#AINews", "#TechAI"],
    "research": ["#Research", "#Science", "#Paper", "#Study", "#Innovation", "#Discovery", "#Academic"],
    "technology": ["#Tech", "#Technology", "#Innovation", "#Digital", "#Future", "#TechNews", "#Computing"],
    "companies": ["#Startup", "#TechCompany", "#Business", "#Industry", "#Corporate", "#TechBusiness"],
    "applications": ["#Application", "#UseCase", "#RealWorld", "#Implementation", "#Practical", "#Solution"],
    "general": ["#News", "#Update", "#Latest", "#Trending", "#Important", "#Breaking"]
  },
  "emojis": {
    "ai": ["🤖", "🧠", "💡", "⚡", "🚀", "🔬", "🎯", "✨"],
    "research": ["📄", "📊", "📈", "🔍", "🧪", "📖", "🎓", "🏆"],
    "technology": ["💻", "📱", "⚙️", "🔧", "🌐", "💾", "🖥️", "⌨️"],
    "companies": ["🏢", "🏪", "🚀", "💼", "📈", "💰", "🎯", "⭐"],
    "applications": ["🎯", "🛠️", "📲", "💡", "🔄", "⚡", "🎪", "🎨"],
    "general": ["📰", "🔥", "⚡", "💫", "🌟", "🎉", "📢", "🚨"]
  },
  "replacements": {
    "title": {
      "maxLength": 120,
      "fallback": "Interesting AI Development"
    },
    "summary": {
      "maxLength": 100,
      "fallback": "Check out this interesting development"
    },
    "keyFindings": {
      "maxLength": 80,
      "fallback": "Significant research findings"
    },
    "highlight": {
      "maxLength": 90,
      "fallback": "Notable tech development"
    },
    "impact": {
      "maxLength": 80,
      "fallback": "Important industry impact"
    },
    "useCase": {
      "maxLength": 90,
      "fallback": "Practical AI application"
    },
    "performance": {
      "maxLength": 70,
      "fallback": "Improved performance metrics"
    },
    "insight": {
      "maxLength": 80,
      "fallback": "Key insights from the event"
    },
    "innovation": {
      "maxLength": 80,
      "fallback": "Innovative technology solution"
    },
    "trend": {
      "maxLength": 80,
      "fallback": "Emerging industry trend"
    },
    "learningPoint": {
      "maxLength": 80,
      "fallback": "Educational content on AI"
    },
    "description": {
      "maxLength": 90,
      "fallback": "Open source project"
    },
    "specs": {
      "maxLength": 70,
      "fallback": "Research dataset"
    },
    "capability": {
      "maxLength": 80,
      "fallback": "AI tool capabilities"
    },
    "consideration": {
      "maxLength": 80,
      "fallback": "Important ethical considerations"
    }
  },
  "rules": {
    "hashtagLimit": 5,
    "emojiLimit": 3,
    "urlReservedLength": 23,
    "hashtagReservedLength": 50,
    "minContentLength": 50,
    "avoidDuplicateHashtags": true,
    "prioritizeRelevantHashtags": true,
    "balanceContentAndHashtags": true,
    "ensureReadability": true,
    "avoidSpammy": true
  },
  "generation": {
    "strategy": "weighted_random",
    "fallbackTemplate": "🤖 {{title}}\n\n{{url}}\n\n{{hashtags}}",
    "contentExtraction": {
      "summaryMethod": "first_paragraph",
      "summaryLength": 100,
      "keywordExtraction": true,
      "entityExtraction": false
    },
    "optimization": {
      "engagementOptimization": true,
      "lengthOptimization": true,
      "hashtagOptimization": true,
      "timingOptimization": false
    }
  },
  "validation": {
    "checkLength": true,
    "checkHashtags": true,
    "checkEmojis": true,
    "checkURL": true,
    "checkContent": true,
    "checkSpam": true,
    "checkDuplicate": true
  },
  "customization": {
    "brandVoice": "informative_friendly",
    "tone": "professional_enthusiastic",
    "audience": "tech_professionals",
    "personality": "knowledgeable_helper",
    "style": "concise_engaging"
  },
  "analytics": {
    "trackTemplateUsage": true,
    "trackEngagement": false,
    "trackCTR": false,
    "optimizeBasedOnPerformance": false
  },
  "scheduling": {
    "timeBasedTemplates": false,
    "eventBasedTemplates": false,
    "trending_templates": false
  }
}
