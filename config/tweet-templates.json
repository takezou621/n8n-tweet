  "version": "1.0.0",
  "lastUpdated": "2025-07-06",
  "templates": [
    {
      "id": "ai_breakthrough",
      "category": "ai",
      "weight": 1.0,
      "template": "🚀 AI Breakthrough: {{title}}\n\n{{summary}}\n\n{{url}}\n\n{{hashtags}}",
