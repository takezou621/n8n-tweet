  "logging": {
    "level": "warn",
    "enableConsole": false,
    "enableFile": true,
    "enableRemoteLogging": true,
    "enableMetrics": true,
    "enableAudit": true,
    "sanitizeOutput": true,
    "rotation": {
      "enabled": true,
