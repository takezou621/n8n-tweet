{
  "name": "n8n-tweet",
  "version": "1.0.0",
  "description": "AI情報収集・配信システム - n8nワークフローを使用してRSSフィードからAI関連情報を収集し、自動でTwitterに投稿するシステム",
  "main": "src/index.js",
  "scripts": {
    "setup": "./scripts/setup-project.sh",
    "setup:initial": "./setup-initial.sh",
    "setup:quick": "./setup-initial.sh",
    "quick": "./quick.sh",
    "start": "node src/index.js",
    "start:legacy": "node src/index.js",
    "dev": "nodemon src/index.js",
    "dev:legacy": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:performance": "jest tests/performance",
    "test:security": "jest tests/security",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "build": "echo 'No build step required for Node.js project'",
    "deploy": "./scripts/deploy-n8n.sh",
    "backup": "./scripts/backup-workflows.sh",
    "restore": "./scripts/restore-workflows.sh",
    "health-check": "node src/monitoring/health-checker.js",
    "start:n8n": "n8n start",
    "n8n": "N8N_BASIC_AUTH_ACTIVE=true N8N_BASIC_AUTH_USER=admin N8N_BASIC_AUTH_PASSWORD=admin n8n start",
    "setup-n8n": "node scripts/final-setup-test.js",
    "open-n8n": "open http://localhost:5678"
  },
  "keywords": [
    "n8n",
    "twitter",
    "rss",
    "ai",
    "automation",
    "workflow",
    "social-media",
    "content-curation"
  ],
  "author": "takezou621",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/takezou621/n8n-tweet.git"
  },
  "bugs": {
    "url": "https://github.com/takezou621/n8n-tweet/issues"
  },
  "homepage": "https://github.com/takezou621/n8n-tweet#readme",
  "dependencies": {
    "archiver": "^7.0.1",
    "axios": "^1.7.2",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "fast-xml-parser": "^4.4.0",
    "joi": "^17.13.3",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "n8n": "^1.100.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.9",
    "puppeteer": "^24.11.2",
    "redis": "^4.6.13",
    "rss-parser": "^3.13.0",
    "tar": "^6.2.0",
    "twitter-api-v2": "^1.17.2",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@evilmartians/lefthook": "^1.12.2",
    "@jest/globals": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-jest": "^28.6.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-coverage-badges": "^1.1.2",
    "lint-staged": "^15.2.7",
    "nodemon": "^3.1.4",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!src/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "extends": [
      "standard",
      "plugin:jest/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "error",
      "max-len": [
        "error",
        {
          "code": 100
        }
      ],
      "camelcase": "error",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "jest --findRelatedTests --passWithNoTests"
    ]
  }
}
